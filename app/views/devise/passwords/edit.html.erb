<% title 'Change Your Password' %>

<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="shadow-box">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center header-short">
          <h1>Change Your Password</h1>
        </div>
        <div class="form-group">
          <%= render 'devise/shared/password_length_estimate', f: f %>
          <%= render 'devise/shared/password_confirmation', f: f %>
          <%= render 'forms/submit', f: f, label: 'Change My Password' %>
        </div>
        <div class="text-center">
          <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>