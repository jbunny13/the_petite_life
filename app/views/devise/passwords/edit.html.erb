<div class="form-container">
  <%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Change your password</h2>
    </div>

    <div class="panel-body">
      <div class="form-group">
        <%= f.label :password, 'New password' %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control input-lg estimate-password' %>
        <%= f.label :password_confirmation, 'Confirm new password' %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control input-lg' %>
      </div>
      
      <%= f.submit 'Change my password', class: 'btn btn-default btn-lg' %>
    </div>
  </div>
  <% end -%>
</div>