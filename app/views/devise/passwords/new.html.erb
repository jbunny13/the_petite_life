<% title 'Forgot Your Password?' %>

<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form'}) do |f| %>
  <div class="shadow-box">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center header-short">
          <h1>Forgot Your Password?</h1>
        </div>
        <div class="form-group">
          <%= render 'devise/shared/email', f: f %>
          <%= render 'forms/submit', f: f, label: 'Reset Password' %>
        </div>
        <div class="text-center">
          <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>