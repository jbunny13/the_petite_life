<% title 'Sign Up' %>

<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
  <div class="shadow-box">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center header-short">
          <h1>Sign Up</h1>
        </div>
        <div class="form-group">
          <%= render 'devise/shared/first_name', f: f %>
          <%= render 'devise/shared/last_name', f: f %>
          <%= render 'devise/shared/email', f: f %>
          <%= render 'devise/shared/password_length_estimate', f: f %>
          <%= render 'devise/shared/password_confirmation', f: f %>
          <%= render 'forms/submit', f: f, label: 'Sign Up' %>
        </div>
        <div class="text-center">
          <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>