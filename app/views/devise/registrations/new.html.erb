<div class="form-container">
  <%= devise_error_messages! %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Sign up</h2>
    </div>

    <div class="panel-body">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control input-lg' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg estimate-password' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg' %>
      </div>
      
      <%= f.submit "Sign up", class: 'btn btn-default btn-lg' %>
      <div><br /><%= render "devise/shared/links" %></div>
    </div>
  </div>
  <% end %>  
</div>