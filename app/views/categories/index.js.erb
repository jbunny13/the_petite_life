$('#articles').html('<%= escape_javascript render @articles %>');
$('.paginate-articles').html('<%= escape_javascript(paginate(@articles, param_name: 'article', remote: true).to_s) %>');
$('.num_entries-articles').html('<%= escape_javascript(page_entries_info(@articles, remote: true).to_s) %>');

