<!DOCTYPE html>
<html>
  <head>
    <title>The Petite Life</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/lodash/4.11.2/lodash.min.js' %>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, inital-scale=1">
  </head>
  <body>
    <% if current_page?(root_path) %>
      <%= render 'layouts/home_header' %>
    <% else %>
      <%= render 'layouts/header' %>
    <% end %>
    <%= render 'layouts/messages' %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
