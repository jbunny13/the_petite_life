<!-- User sign up / login -->
<div class="navbar-btn navbar-right">
  <div class="dropdown btn-group">
    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path, class: 'btn btn-default' do %>
        <i class="fa fa-user fw"></i>&nbsp;&nbsp;<span><%= current_user.full_name %></span>
      <% end %>
      <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        <span class="fa fa-caret-down"></span>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to 'Account', edit_user_registration_path %>
        </li>
        <li>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
        </li>
        </ul>
    </div>
  <% else %>
    <div class="btn-group open">
      <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-default' %>
      <%= link_to "Log In", new_user_session_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
<!-- /.signup-login -->