<div class="container-fluid">
  <center>
    <h1>Resources Index</h1>
    <% if can? :create, Reference %>
      <p>Looks like you can add a new resource!<br />
      <%= link_to 'Add new resource', new_reference_path, class:'btn btn-default' %>
      <br /></p>
    <% end %>
  </center>

  <div class="text-right">
    <b>Sort By: </b>
    <%= link_to 'Most Recent', references_path(sort: 'most_recent') %> | 
    <%= link_to 'Name (A-Z)', references_path(sort: 'by_name') %>
  </div><br /><br />

  <div class="row">
    <ul class="list-group">
      <% @references.each do |reference| %>
        <li class="list-group-item">
          <%= render reference %>
        </li>
      <% end %>
    </ul>
  </div>
</div>