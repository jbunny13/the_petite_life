$('#comments').html('<%= escape_javascript render @comments %>');
$('.paginate').html('<%= escape_javascript(paginate(@comments, remote: true).to_s) %>');
$('.num_entries').html('<%= escape_javascript(page_entries_info(@comments, remote: true).to_s) %>');

$('.star-rating').raty({
  path: '',
  readOnly: true,
  score: function() { return $(this).attr('data-score') }
});