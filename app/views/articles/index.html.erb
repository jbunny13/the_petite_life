<center>
  <h1>Articles Index</h1>
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag article.image.url(:thumb), class: 'image'), article %>
          <div class="caption">
            <h3><%= article.name %></h3>
            <p><%= article.user.full_name %></p>
            <% if can? :create, Article %>
              <p><%= link_to 'Edit', edit_article_path(article) %></p>
              <p><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</center>

<% if can? :create, Article %>
  <div class="form-container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Looks like you can add a new article!</h4>
      </div>
      <div class="panel-body">
        <%= link_to 'Add New Article', new_article_path, class:'btn' %>
      </div>
    </div>
  </div>
<% end %>
