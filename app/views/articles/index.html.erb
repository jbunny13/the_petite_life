<% title 'Articles' %>

<div class="row spacer-row text-center">
  <h1>Articles</h1>
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="dropdown btn-group pull-left">
      <a href="#" class="shadows btn btn-default dropdown-toggle sort-menu" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
        Sort By
        &nbsp;
        <span class="fa fa-caret-down"></span>
      </a>
      <ul class="dropdown-menu shadows sort-dropdown">
        <li><%= link_to 'Recent', articles_path(sort: 'most_recent'), remote: true %></li>
        <li><%= link_to 'Name (A-Z)', articles_path(sort: 'by_name'), remote: true %></li>
      </ul>
    </div>
  </div>

  <% if can? :create, Article %>
    <div class="col-xs-12 col-sm-6 col-md-1 col-md-offset-5">
      <%= link_to new_article_path, class:'shadows btn btn-default pull-right' do %>
        <i class="fa fa-plus fa-lg"></i>&nbsp; Article
    <% end %>
    </div>
  <% end %>
</div>

<div id="articles" class="row">
  <%= render @articles %>
  <br><br>
</div>

<div class="num_entries text-center row pagination-info">
  <%= page_entries_info @articles, remote: true %>
</div>

<div class="paginate text-center row">
  <%= paginate @articles, remote: true %>
</div>
