<%= form_for @article, html: { multipart: true, role: 'form' } do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :name, 'Article Title' %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :user_id, 'Author' %><br>
      <p class="form-control-static"><%= current_user.full_name %></p><br />
    </div>

    <div class="field">
      <p><b>Categories</b></p>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
        <%= b.check_box %>
        <%= b.label class: 'fw-normal' %><br />
      <% end %><br />
    </div>

    <%= render 'shared/form_tags', f: f, resource: @article %>

    <div class="field">
      <%= f.label :image, 'Featured Image' %><br />
      <% if @article.image.exists? %>
        <%= image_tag @article.image.url(:thumb) %><br /><br />
      <% end %>
      <%= f.file_field :image, class: 'inputfile' %>
      <%= f.label :image, 'Choose a file' %><br />
    </div>

    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content, autofocus: true, class: 'redactor form-control input-lg' %>
    </div>

    <%= f.submit 'Save', data: { disable_with: 'Please wait' }, class: 'btn btn-default' %>
  </div>
<% end %>

<script>
  $(document).ready(function() {

    $('select.taggable').select2({
      theme: 'bootstrap',
      tags: true,
      multiple: true,
      placeholder: 'Start typing to select or add a tag'
    }); 

  });
</script>

