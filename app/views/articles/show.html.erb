<%= link_to articles_path, class: 'btn btn-default' do %>
  <span class="fa fa-chevron-left">&nbsp;&nbsp;&nbsp;</span>Back to all articles
<% end %><br /><br />

<h2 class="panel-title-no-margins">
  <%= @article.name %>
  <% if can? :update, @article %>
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-default' %>
  <% end %>
  <% if can? :destroy, @article %>
    <%= link_to 'Delete', @article, class: 'btn btn-default',  method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</h2>  
<p><%= @article.user.full_name %></p>
<p><%= local_time_ago(@article.created_at) %></p>
<div class="text-center"><%= image_tag @article.image.url(:medium) %></div>
<p><%= sanitize(@article.content, tags: %w(code pre div p ul ol table dl blockquote pre a object embed video audio img figure iframe hr dd dl dt h1 h2 h3 h4 h5 h6 span label br i b del strike u param mark cite small li sup sub big figcaption strong em tr td th tbody thead), attributes: %w(href src style)) %></p>

<div class="well">
  <p><b>Categories</b><br />
    <% @article.categories.each do |category| %>
      <%= render partial: 'categories/category_link', locals: { category: category } %>
    <% end %>
  </p>
  <p><b>Tags</b><br />
    <%= render @article.tags.order(name: :asc) %>
  </p>
</div>

<br />
<%= render template: 'comments/index' %>