<center>
  <h1>Tagged <span class="label-tag"><%= @tag.name %></span></h1>
</center>
  
<div class="row">
  <h2>Articles</h2>
  <% if @articles.any? %>
    <div class="num_entries-articles">
      <%= page_entries_info @articles, remote: true %>
    </div>
    <div class="paginate-articles">
      <%= paginate @articles, remote: true %>
      <br /><br />
    </div>
    <div id="articles">
      <%= render @articles %>
    </div>
  <% else %>
    <p>No articles found</p>
  <% end %>
</div>

