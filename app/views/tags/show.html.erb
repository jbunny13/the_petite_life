<center>
  <h1>Tagged <span class="label-tag"><%= @tag.name %></span></h1>
</center>
<div class="container-fluid">
<div class="row">
  <h2>Articles</h2>
  <% if @articles.any? %>
    <%= render @articles %>
  <% else %>
    <p>No articles found</p>
  <% end %>
</div>

<div class="row">
  <h2>Products</h2>
  <% if @products.any? %>
    <%= render @products %>
  <% else %>
    <p>No products found</p>
  <% end %>
</div>

<div class="row">
  <h2>Resources</h2>
  <% if @references.any? %>
    <%= render @references %>
  <% else %>
    <p>No references found</p>
  <% end %>
</div>
</div>