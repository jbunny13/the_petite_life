<hr>
<p>
  <%= comment.user.full_name %> | 
  <%= local_time_ago(comment.created_at) %>
</p>

<p><%= comment.content %></p>

<p>
  <% if can? :update, comment %>
  <%= link_to 'Edit comment', edit_article_comment_path(@article, comment), class: 'btn btn-default' %>
  <% end %>

  <% if can? :destroy, comment %>
  <%= link_to 'Delete comment', [@article, comment], method: :delete, class: 'btn btn-default', data: {confirm: "Are you sure you want to delete this comment?"} %>
  <% end %>
</p>