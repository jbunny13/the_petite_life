<b><%= comment.user.full_name %></b>
<em><%= local_time_ago(comment.created_at) %></em>
<br><br>
<div class="text-justify"><%= simple_format(comment.content) %></div>
<% if can? :update, comment %>
  <%= link_to edit_article_comment_path(@article, comment) do %>
    <%= render 'shared/icon_edit' %>
  <% end %>
<% end %>
<div class="spacing"></div>
<% if can? :destroy, comment %>
  <%= link_to [@article, comment], method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} do %>
    <%= render 'shared/icon_delete' %>
  <% end %>
<% end %>
<hr>
