<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="no-margins">Comments</h3>
  </div>

  <div class="panel-body">
  <h4 class="panel-title">Got something to add?</h4><br />
    <%= link_to "Add a comment", new_article_comment_path(@article), class: 'btn btn-default' %>
    <br />
    <hr>
  
    <div class="num_entries">
      <%= page_entries_info @comments, remote: true %>
    </div>

    <div class="paginate">
      <%= paginate @comments, remote: true %>
    </div>

    <div id="comments">
      <%= render @comments %>
      <hr>
    </div>
  </div>
</div>

<script>
$('.star-rating').raty({
  path: '',
  readOnly: true,
  score: function() { return $(this).attr('data-score') }
});
</script>