<%= form_for @product, html: { multipart: true, role: 'form' } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :name, 'Product Name' %><br />
      <%= f.text_field :name, class: 'form-control input-lg' %><br />
    </div>

    <div class="field">
      <p>
        <i class="fa fa-user fw">&nbsp;&nbsp;</i>
        <%= current_user.full_name %><br />
      </p>
    </div>

    <div class="field">
      <p><b>Categories</b></p>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
        <%= b.check_box %>
        <%= b.label class: 'fw-normal' %><br />
      <% end %><br />
    </div>

    <%= render 'shared/form_tags', f: f, resource: @product %>

    <div class="field">
      <%= f.label :image, 'Featured Image' %><br />
      <% if @product.image.exists? %>
        <%= image_tag @product.image.url(:thumb) %><br /><br />
      <% end %>
      <%= f.file_field :image, class: 'inputfile' %>
      <%= f.label :image, 'Choose a file' %><br />
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, class: 'redactor form-control' %><br /><br />
    </div>

    <%= f.submit 'Save', data: { disable_with: 'Please wait' }, class: 'btn btn-default' %>
  </div>
<% end %>

<script>
  $(document).ready(function() {

    $('select.taggable').select2({
      theme: 'bootstrap',
      tags: true,
      multiple: true,
      placeholder: 'Start typing to select or add a tag'
    }); 

  });
</script>

<style>
.re-icon.re-image, .re-icon.re-file {
  display:none;
}
</style>
