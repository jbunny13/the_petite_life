<div>
  <%= link_to products_path, class: 'btn btn-default' do %>
    <span class="fa fa-chevron-left">&nbsp;&nbsp;&nbsp;</span>Back to all products
  <% end %><br /><br />
</div>

<div class="row">
  <div class="col-md-6">
    <center><%= image_tag @product.image.url(:medium) %></center>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title-1">
          <%= @product.name %>
          <% if can? :update, @product %>
            <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-default' %>
          <% end %>

          <% if can? :destroy, @product %>
            <%= link_to 'Delete', @product, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </h2>

        <h4>Added By</h4>
        <p><%= @product.user.full_name %></p>
        
        <h4>Created</h4>
        <p><%= local_time_ago(@product.created_at) %></p>
        
        <h3 class="panel-title-1">Categories</h3>
        <% @product.categories.each do |category| %>
          <%= render partial: 'categories/category_link', locals: { category: category } %>
        <% end %>
            
        <h3 class="panel-title-1">Tags</h3>
        <%= render @product.tags.order(name: :asc) %>
        
      </div>
      <div class="panel-body">
        <p><%= sanitize(@product.description, tags: %w(code pre div p ul ol table dl blockquote pre a object embed video audio img figure iframe hr dd dl dt h1 h2 h3 h4 h5 h6 span label br i b del strike u param mark cite small li sup sub big figcaption strong em tr td th tbody thead), attributes: %w(href src style)) %></p>
      </div>
    </div>
  </div>
</div>
<br />
<%= render template: 'reviews/index' %>