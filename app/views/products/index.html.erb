<h2>Life's too short to spend time worrying about the small stuff!</h2>
<p><%= Forgery('lorem_ipsum').paragraphs(10) %></p>
<p><%= Forgery('lorem_ipsum').sentences(30) %></p>
<br /><br /><br />
<center>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag product.image.url(:thumb), class: 'image'), product %>
          <div class="caption">
            <h3><%= product.name %></h3>
            <h4>Category: <%= product.category %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</center>

<%= link_to 'New Product', new_product_path, class:'btn' %>
