<h2>Life's too short to spend time worrying about the small stuff!</h2>
<p><%= Forgery('lorem_ipsum').paragraphs(10) %></p>
<p><%= Forgery('lorem_ipsum').sentences(30) %></p>
<br /><br /><br />
<center>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag product.image.url(:thumb), class: 'image'), product %>
          <div class="caption">
            <h3><%= product.name %></h3>
            <h4>Category: <%= product.category %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</center>

<% if can? :create, Product %>
  <div class="form-container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Looks like you're a contributor, moderator, or an admin!</h4>
      </div>
      <div class="panel-body">
        <%= link_to 'Add New Product', new_product_path, class:'btn' %>
      </div>
    </div>
  </div>
<% end %>
