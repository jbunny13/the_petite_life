<% title 'Products' %>

<div class="row spacer-row text-center">
  <h1>Products</h1>
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="dropdown btn-group pull-left">
      <a href="#" class="shadows btn btn-default dropdown-toggle sort-menu" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
        Sort By
        &nbsp;
        <span class="fa fa-caret-down"></span>
      </a>
      <ul class="dropdown-menu shadows sort-dropdown">
        <li><%= link_to 'Recent', products_path(sort: 'most_recent'), remote: true %></li>
        <li><%= link_to 'Name (A-Z)', products_path(sort: 'by_name'), remote: true %></li>
        <li><%= link_to 'Rating', products_path(sort: 'average_rating'), remote: true %></li>
      </ul>
    </div>
  </div>

  <% if can? :create, Product %>
    <div class="col-xs-12 col-sm-6 col-md-1 col-md-offset-5">
      <%= link_to new_product_path, class:'shadows btn btn-default pull-right' do %>
        <i class="fa fa-plus fa-lg"></i>&nbsp; Product
    <% end %>
    </div>
  <% end %>
</div>

<div id="products" class="row">
  <%= render @products %>
  <br><br>
</div>

<div class="num_entries text-center row pagination-info">
  <%= page_entries_info @products, remote: true %>
</div>

<div class="paginate text-center row">
  <%= paginate @products, remote: true %>
</div>

<%= render 'shared/star_rating_read_only' %>