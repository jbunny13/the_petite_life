<center>
  <h1>Products Index</h1>
  <% if can? :create, Product %>
    <p>Looks like you can add a new product!<br />
    <%= link_to 'Add new product', new_product_path, class:'btn btn-default' %>
    <br /></p>
  <% end %>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag product.image.url(:thumb), class: 'image'), product %>
          <div class="caption">
            <h3><%= product.name %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</center>