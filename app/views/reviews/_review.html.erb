<div class="star-rating pull-left" data-score="<%= review.rating %>"></div>
<div class="spacing"></div>
<b><%= review.user.full_name %></b>
<em><%= local_time_ago(review.created_at) %></em>

<div class="text-justify"><%= simple_format(review.content) %></div>
<% if can? :update, review %>
  <%= link_to edit_product_review_path(@product, review) do %>
    <%= render 'shared/icon_edit' %>
  <% end %>
<% end %>
<div class="spacing"></div>
<% if can? :destroy, review %>
  <%= link_to [@product, review], method: :delete, data: {confirm: "Are you sure you want to delete this review?"} do %>
    <%= render 'shared/icon_delete' %>
  <% end %>
<% end %>
<hr>