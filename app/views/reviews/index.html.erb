<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title-1">Reviews</h3>
  </div>

  <div class="panel-body">
    <div class="star-rating" data-score= <%= @product.average_rating %> ></div>
    <p><em>(<%= pluralize(@product.reviews.length, "Review") %>)</em></p>

    <h4 class="panel-title">What do you think of <%= @product.name %>?</h4>
    <p>Share your thoughts with the community.</p>

    <%= link_to "Write a review", new_product_review_path(@product), class: 'btn btn-default btn-lg' %>

    <br />
    <hr>
  
    <div class="num_entries">
      <%= page_entries_info @reviews, remote: true %>
    </div>

    <div class="paginate">
      <%= paginate @reviews, remote: true %>
    </div>

    <div id="reviews">
      <%= render @reviews %>
      <hr>
    </div>
  </div>
</div>

<script>
$('.star-rating').raty({
  path: '',
  readOnly: true,
  score: function() { return $(this).attr('data-score') }
});
</script>
